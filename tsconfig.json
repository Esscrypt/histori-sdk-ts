{
  "compilerOptions": {
    "target": "ES6",                 // Keep this or change to ES5/ES2020 based on your requirements
    "module": "ESNext",              // Set to a Rollup-compatible module
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "Node",      // Optional: keep 'Node' for module resolution
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
